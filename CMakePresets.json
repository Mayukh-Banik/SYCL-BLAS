{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "icpx",
        "CMAKE_CXX_FLAGS": "-O3 -ffast-math -fsycl"
      }
    },
    {
      "name": "tests",
      "displayName": "Build with Tests Enabled",
      "description": "Configure project with Google Test integration",
      "inherits": "base",
      "cacheVariables": {
        "ENABLE_TESTING": "ON"
      }
    },
    {
      "name": "default",
      "displayName": "Builds Shared Library",
      "description": "Configure project to build shared library",
      "inherits": "base",
      "cacheVariables": {
      }
    }
  ],
  "buildPresets": [
    {
      "name": "tests",
      "displayName": "Build with Tests",
      "configurePreset": "tests"
    },
    {
      "name": "default",
      "displayName": "Build Default",
      "configurePreset": "default"
    }
  ]
}
